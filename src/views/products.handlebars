<div class="container">

  <h1
    class="text-danger text-lg text-uppercase text-center mt-4 mb-4"
  >Products</h1>

  <table class="table table-dark table-hover mt-4">

    <thead>
      <tr>
        <th>ID</th>
        <th>TITLE</th>
        <th>CATEGORY</th>
        <th>DESCRIPTION</th>
        <th>STOCK</th>
      </tr>
    </thead>
    <tbody>
      {{#each products}}
        <tr>
          <td>{{this.id}}</td>
          <td>{{this.title}}</td>
          <td>{{this.category}}</td>
          <td>{{this.description}}</td>
          <td>{{this.stock}}</td>
        </tr>
      {{/each}}
    </tbody>

  </table>

  <a href="/" class="btn btn-warning text-uppercase mt-4">Add Product</a>

</div>